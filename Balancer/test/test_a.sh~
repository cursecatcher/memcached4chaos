clear
echo "
***********************
      BALANCER
***********************

Enter an Option:
1 - Launch Balancer
2 - Launch Server(s)
3 - Launch Setter(s)
4 - Launch Getter(s)

q - Quit
";
SETTERS_NUM=0;
read OPT;

case "$OPT" in
1)	clear
	./Balancer/bin/Release/Balancer
;;

2)      
	    ./Server/bin/Release/Server 1101 127.0.0.1
	    sleep 0.5
	    ./Server/bin/Release/Server 1102 127.0.0.1
;;

3)      clear; echo "How many Setters do you want to launch?"
	read SETTERS_NUM
	SETTER_NAME="set";
	BALANCER_ADDR="127.0.0.1";
	COUNTER=0
         while [  $COUNTER -lt $SETTERS_NUM ];
	do
	   ./Setter/bin/Release/Setter -b $BALANCER_ADDR -n ${SETTER_NAME}${COUNTER} -s 1024  -ui 1000 &
	    let COUNTER=COUNTER+1
	    sleep 0.5
	done
;;
4)      clear; echo "How many Getters do you want to launch?"
	read GETTERS_NUM
	SETTER_NAME="set"
	clear; echo "Enter Balancer service IP address (default:localhost)"
	read BALANCER_ADDR
	if [ "$BALANCER_ADDR" == "" ]; then BALANCER_ADDR="127.0.0.1"; fi
	COUNTER=0
	NAME=${SETTER_NAME}"_get_"
         while [  $COUNTER -lt $GETTERS_NUM ];
	do
	   ./Getter/bin/Release/Getter -b $BALANCER_ADDR -n ${NAME}${COUNTER} -s 1024 -ui 1000 -m ${SETTER_NAME}${${COUNTER} % ${SETTERS_NUM}} &
	    let COUNTER=COUNTER+1
	    sleep 0.5
	done
;;
'q')    
;;
'Q')
;;
esac
